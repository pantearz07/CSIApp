<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_red_2</item>
        <item name="colorPrimaryDark">@color/dark_red_2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/black_trans</item>
        <item name="colorPrimaryDark">@color/black_trans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/dark_red_2</item>
        <item name="colorPrimaryDark">@color/dark_red_2</item>
    </style>

    <style name="SectionText">
        <item name="android:textSize">@dimen/mmedium_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@drawable/text_color_btn</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="edtMultiLine">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">normal</item>

        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>

        <item name="android:focusable">true</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/navy</item>
        <item name="android:textColorPrimary">@color/ocean</item>
        <item name="android:background">@color/dark_red_2</item>
    </style>

    <style name="SceneInvestDateTimeDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/dark_red_2</item>
        <item name="colorPrimaryDark">@color/dark_red_2</item>
        <item name="android:textColorPrimary">@color/ocean</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
