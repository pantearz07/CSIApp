<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >
    <TableLayout
        android:id="@+id/tableFeatureInsideClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_s" >

        <TableRow
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="ชั้นที่"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/showFeatureInsideFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="0"
                android:textSize="@dimen/small_text" />
            <TextView
                android:id="@+id/txtFeatureInsideCave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="คูหาที่"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/showFeatureInsideCave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="0"
                android:textSize="@dimen/small_text" />
            <ImageButton
                android:id="@+id/imgEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_gravity="right|center_vertical"
                android:src="@android:drawable/ic_menu_edit"/>
            <ImageButton
                android:id="@+id/imgDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_gravity="right|center_vertical"
                android:src="@android:drawable/ic_delete"/>
        </TableRow>

        <View
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/padding_s"
            android:layout_marginBottom="@dimen/padding_s"
            android:background="@color/orange" />

        <TableRow android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/editFeatureInsideClassBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="ด้านหลัง"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/editFeatureInsideClassLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="ด้านซ้าย"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/editFeatureInsideClassCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="ตรงกลาง"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/editFeatureInsideClassRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="ด้านขวา"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/editFeatureInsideClassFront"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="ด้านหน้า"
                android:textSize="@dimen/small_text" />
        </TableRow>
    </TableLayout>

</LinearLayout>
