<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_addinside_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp" >

    <TableLayout
        android:id="@+id/tableFeatureInsideClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TableRow>

            <TextView
                android:id="@+id/txtFeatureInsideFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="left"
                android:text="ชั้นที่"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/editFeatureInsideFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:hint="0"
                android:inputType="number"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/editNoti1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtFeatureInsideCave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="left"
                android:text="คูหาที่"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/editFeatureInsideCave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:hint="0"
                android:inputType="number"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/editNoti2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </TableRow>

        <View
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#00A0B0" />

        <TableRow android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/editFeatureInsideClassBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="ด้านหลัง"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/editFeatureInsideClassLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="ด้านซ้าย"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/editFeatureInsideClassCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="ตรงกลาง"
                android:textSize="@dimen/small_text" />

            <EditText
                android:id="@+id/editFeatureInsideClassRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="ด้านขวา"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow android:gravity="center_horizontal|center_vertical" >

            <EditText
                android:id="@+id/editFeatureInsideClassFront"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="ด้านหน้า"
                android:textSize="@dimen/small_text" />
        </TableRow>
    </TableLayout>

</LinearLayout>