<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEvidenceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:hint="วัตถุพยาน"
            android:textSize="@dimen/small_text" />


        <ImageButton
            android:id="@+id/imgEdit"
            android:layout_width="@dimen/width_btn"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/width_btn"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_delete_file" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtEvidenceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/txtFindEvidenceZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="@integer/small_size"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/txtMarking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/txtParceling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/txtEvidencePerformed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="การดำเนินการเกี่ยวกับวัตุพยาน : "
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/txtEvidencePerformed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="การดำเนินการเกี่ยวกับวัตุพยาน"
        android:maxLines="@integer/small_size"
        android:textSize="@dimen/small_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="รูปภาพ (0)"
            android:textSize="@dimen/ssmall_text"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="วิดีโอ (0)"
            android:textSize="@dimen/ssmall_text"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>