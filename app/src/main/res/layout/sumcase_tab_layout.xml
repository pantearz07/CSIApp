<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutSum"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootLayoutCSI"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/ScrollView_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/codelab_fab_margin_right"
            android:layout_marginRight="@dimen/codelab_fab_margin_right"
            android:layout_marginTop="@dimen/codelab_fab_margin_right"

            android:fillViewport="true"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCaseType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="คดีเกี่ยวกับ"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />


                    <View
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <TextView
                    android:id="@+id/edtCaseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="คดีเกี่ยวกับ"
                    android:textSize="@dimen/small_text" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSubCaseType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="ประเภทคดี"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <TextView
                    android:id="@+id/edtSubCaseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="ประเภทคดี"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSCDCcenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="ศูนย์พิสูจน์หลักฐาน"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <TextView
                    android:id="@+id/edtCDCcenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="ศูนย์พิสูจน์หลักฐาน"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSCDCagency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="พิสูจน์หลักฐานจังหวัด"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <TextView
                    android:id="@+id/edtCDCagency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="พิสูจน์หลักฐานจังหวัด"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtInvestigator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="ผู้ตรวจสถานที่เกิดเหตุ"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <TextView
                    android:id="@+id/edtInvestigator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                        android:text="ผู้ตรวจ"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="สถานะการตรวจ"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view31"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>


                <TextView
                    android:id="@+id/edtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="กำลังดำเนินการตรวจ"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtInvestDateTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="วันเวลาที่รับแจ้งเหตุ"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <TextView
                    android:id="@+id/edtInvestDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="-"
                    android:textSize="@dimen/small_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUpdateDateTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="วันเวลาที่แก้ไขข้อมูลล่าสุด"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>


                <TextView
                    android:id="@+id/edtUpdateDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:paddingLeft="@dimen/paddingLeftTxt"
                    android:text="-"
                    android:textSize="@dimen/small_text" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_line"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtDocfiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line"
                        android:text="ไฟล์รายงาน"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/view_height"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/dark_brown" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutListDocfiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ListView
                        android:id="@+id/listViewDocfiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/ocean"
                        android:dividerHeight="@dimen/divider_height"
                        android:padding="5dp"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>