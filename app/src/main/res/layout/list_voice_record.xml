<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/txtVoiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ชื่อไฟล์ : "
        android:textSize="@dimen/small_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtVoiceDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVoiceName"
        android:text="คำอธิบาย"
        android:textSize="@dimen/ssmall_text" />

    <ImageView
        android:id="@+id/btnExpandmenu"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_expand_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>