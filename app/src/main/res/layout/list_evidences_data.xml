<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TableLayout
        android:id="@+id/tableClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_s">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="1."
                android:textSize="@dimen/small_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtEvidenceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/small_text" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="พบจำนวน "
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/txtEvidenceNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_m"
                android:layout_marginRight="@dimen/padding_m"
                android:text="1"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/txtEvidencesUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="แผ่น"
                android:textSize="@dimen/small_text" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/FindEvidenceZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บริเวณที่พบ : "
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/txtFindEvidenceZone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="@integer/medium_size"
                android:textSize="@dimen/small_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Marking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="การทำเครื่องหมาย : "
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/txtMarking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="@integer/small_size"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Parceling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="การบรรจุหีบห่อ : "
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/txtParceling"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="@integer/small_size"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtEvidencePerformed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="การดำเนินการเกี่ยวกับวัตุพยาน"
                android:maxLines="@integer/medium_size"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left|center_vertical"
                android:text="รูปภาพ (0)"
                android:textSize="@dimen/ssmall_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="วิดีโอ (0)"

                android:textSize="@dimen/ssmall_text"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:background="@color/transparent"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/imgDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:background="@color/transparent"
                android:src="@drawable/ic_drop" />
        </TableRow>

    </TableLayout>

</LinearLayout>
