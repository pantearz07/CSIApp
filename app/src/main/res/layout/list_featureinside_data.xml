<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableFeatureInsideClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_s">

        <TableRow android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="ชั้นที่: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/showFeatureInsideFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="0"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/txtFeatureInsideCave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="คูหาที่: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/showFeatureInsideCave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="0"
                android:textSize="@dimen/small_text" />
            <ImageButton
                android:id="@+id/imgEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/padding_s"
                android:src="@drawable/ic_edit"/>
            <ImageButton
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_drop"/>
        </TableRow>

        <View
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_s"
            android:background="@color/orange" />

        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideClassFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="ด้านหน้า: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtFeatureInsideClassFront2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/small_text" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideClassLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="ด้านซ้าย: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtFeatureInsideClassLeft2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/small_text" />

        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideClassCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="ตรงกลาง: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtFeatureInsideClassCenter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/small_text" />

        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideClassRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="ด้านขวา: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtFeatureInsideClassRight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/small_text" />

        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtFeatureInsideClassBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="ด้านหลัง: "
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtFeatureInsideClassBack2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"

                android:textSize="@dimen/small_text" />
        </TableRow>
        <TableRow android:layout_marginTop="@dimen/padding_s">
            <TextView
                android:id="@+id/txtPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="รูปภาพ"
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic"  />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/padding_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:textStyle="bold|italic"
                android:padding="5dp"
                android:text="วิดีโอ (0)"
                android:visibility="gone"/>
        </TableRow>
    </TableLayout>
