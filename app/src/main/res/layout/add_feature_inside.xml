<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tableFeatureInsideClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TableRow>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideFloor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/editFeatureInsideFloor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ชั้นที่"
                                android:inputType="number"

                                android:textSize="@dimen/small_text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideCave"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/editFeatureInsideCave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="คูหาที่"
                                android:inputType="number"

                                android:textSize="@dimen/small_text" />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/editNoti3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="กรุณากรอกข้อมูลชั้น"
                            android:textColor="#FF0000"
                            android:textSize="@dimen/ssmall_text"
                            android:visibility="gone" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/editNoti4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="กรุณากรอกข้อมูลคูหา"
                            android:textColor="#FF0000"
                            android:textSize="@dimen/ssmall_text"
                            android:visibility="gone" />
                    </TableRow>

                    <View
                        android:layout_height="2dp"
                        android:layout_marginBottom="@dimen/padding_s"
                        android:layout_marginTop="@dimen/padding_s"
                        android:background="#00A0B0" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideClassFront"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <MultiAutoCompleteTextView
                                android:id="@+id/editFeatureInsideClassFront"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ด้านหน้า"
                                style="@style/edtMultiLine"
                                android:maxLines="5"
                                android:minLines="1"  />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideClassLeft"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <MultiAutoCompleteTextView
                                android:id="@+id/editFeatureInsideClassLeft"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ด้านซ้าย"
                                style="@style/edtMultiLine"
                                android:maxLines="5"
                                android:minLines="1" />
                        </android.support.design.widget.TextInputLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideClassCenter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <MultiAutoCompleteTextView
                                android:id="@+id/editFeatureInsideClassCenter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ตรงกลาง"
                                style="@style/edtMultiLine"
                                android:maxLines="5"
                                android:minLines="1"  />
                        </android.support.design.widget.TextInputLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideClassRight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <MultiAutoCompleteTextView
                                android:id="@+id/editFeatureInsideClassRight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ด้านขวา"
                                style="@style/edtMultiLine"
                                android:maxLines="5"
                                android:minLines="1"  />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_line">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtFeatureInsideClassBack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <MultiAutoCompleteTextView
                                android:id="@+id/editFeatureInsideClassBack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ด้านหลัง"
                                style="@style/edtMultiLine"
                                android:maxLines="5"
                                android:minLines="1" />
                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ocean"
                        android:gravity="center_horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnTakePhotoInsidex"
                            android:layout_width="@dimen/icon_image_l"
                            android:layout_height="@dimen/icon_image_l"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_camera_wh"
                            android:gravity="center|center_horizontal" />

                        <Button
                            android:id="@+id/btnVideoInsidex"
                            android:layout_width="@dimen/icon_image_l"
                            android:layout_height="@dimen/icon_image_l"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_video_wh"
                            android:gravity="center|center_horizontal"
                            android:visibility="gone" />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/txtPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_s"
                    android:background="@color/navy"
                    android:padding="8dp"
                    android:text="รูปภาพ"
                    android:textAppearance="@style/SectionText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnTakePhotoInside"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_camera_add" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollViewInside"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fillViewport="false"
                        android:scrollbars="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <GridView
                                android:id="@+id/horizontal_gridView_Inside"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnWidth="100dp"
                                android:gravity="center_vertical"
                                android:horizontalSpacing="1dp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_s"
                    android:background="@color/navy"
                    android:padding="8dp"
                    android:text="วิดีโอ"
                    android:textAppearance="@style/SectionText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/btnVideoInside"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_video" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollViewInside_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fillViewport="false"
                        android:scrollbars="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <GridView
                                android:id="@+id/horizontal_gridView_Inside_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnWidth="100dp"
                                android:gravity="center_vertical"
                                android:horizontalSpacing="1dp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabBtnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/codelab_fab_margin_bottom"
            android:layout_marginRight="@dimen/codelab_fab_margin_right"
            android:src="@drawable/ic_saveas_wh"
            app:backgroundTint="@color/orange"
            app:fabSize="normal"
            app:layout_behavior="com.scdc.csiapp.main.ScrollAwareBehavior"
            app:rippleColor="#FFF" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>